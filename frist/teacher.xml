<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
							"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onteacher.dao.TeacherDAO">
	<insert id="insertTeacher" parameterType="teacher">
		<![CDATA[
		insert into teacher(id,email,name,password,phone_number,address,birthday,gender,profile_img,introduction,active,file_name,description,status,message)
		values(TeacherIdSeq.nextval,#{email},#{name},#{password},#{phone_number},#{address},#{birthday},#{gender},#{profile_img},#{introduction},#{active},#{file_name},#{description},#{status},#{message})
		]]>
	</insert>
	<select id="selectTeacher" resultType="teacher" parameterType="String">
		<![CDATA[
		select * from teacher
		where
		email=#{email}
		]]>
		</select>	
</mapper>