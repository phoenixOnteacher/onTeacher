<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
							"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onteacher.dao.HomeworkAnswerDAO">
	<resultMap type="homeworkAnswer" id="homeworkAnswerMap">
		
	</resultMap>

	<insert id="insertHomeworkAnswer" parameterType="homeworkAnswer">
		<![CDATA[
		insert into homeworkAnswer(filename,content,student_id,homework_id)
		values(#{filename},#{content},#{studentId},#{homeworkId})
		]]>
	</insert>
	<select id="selectHomeworkAnswer" resultMap="homeworkAnswerMap" parameterType="int">
		<![CDATA[
		select *
		from homeworkAnswer
		where student_id=#{user_id}
		and homework_id=#{homework_id}
		]]>
	</select>
	<!-- 
	<select id="selectHomeworkAnswerById" resultType="homeworkAnswer" parameterType="int">
		select *
		from homeworkAnswer
	</select>
	-->
</mapper>