<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
							"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onteacher.dao.CommentDAO">


	<select id="selectAllCommentList" resultType="comment"
		parameterType="int">
		 <![CDATA[
		SELECT id,content,created_at,user_id,article_id
		FROM reply
		WHERE article_id=#{article_id}
		ORDER BY id
		]]>
	</select>

	<insert id="insertComment" parameterType="comment">
        <![CDATA[
		 INSERT INTO reply(id,content,created_at,user_id,article_id)
         VALUES (REPLY_SEQ.NEXTVAL, #{content}, sysdate,  #{user_id}, #{article_id} )
		]]>
	</insert>

	<delete id="deleteComment" parameterType="int">
		<![CDATA[
		delete from reply
		WHERE id=#{id}
		]]>
	</delete>

	<update id="updateComment" parameterType="comment">
		 <![CDATA[
		 UPDATE reply
		SET content=#{content}
		WHERE id=#{id}
		]]>
	</update>

	<select id="selectComment" resultType="comment"
		parameterType="int">
		 <![CDATA[
		 select * from Reply
		where article_id=#{article_id}
		]]>
	</select>
</mapper>